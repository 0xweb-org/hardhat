{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "ts-temp",
        "lib": ["es2020"],
        "typeRoots": [
            "node_modules/@types",
            "typings",
            "typings/globals",
            "typings-other"
        ],
        "types": ["node", "assertion", "atma-utest"],
        "declaration": true,
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true
    }
}
